{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "windows-msvc-release",
      "displayName": "Windows (MSVC Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-msvc-release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "17"
      }
    },

    {
      "name": "wsl-ubuntu-22.04-gcc-release",
      "displayName": "WSL (GCC Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/wsl-release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudio/RemoteSettings": {
          "source": "WSL",
          "distribution": "Ubuntu-22.04"
        }
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "17"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "build-windows-msvc-release",
      "configurePreset": "windows-msvc-release"
    },

    {
      "name": "build-wsl-release",
      "configurePreset": "wsl-ubuntu-22.04-gcc-release"
    }
  ],

  "testPresets": [
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      }
    },

    {
      "name": "wsl-ubuntu-22.04-gcc-release",
      "configurePreset": "wsl-ubuntu-22.04-gcc-release",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      }
    }
  ]
}